                        <configuration>
                            <excludes>
                                <!-- Generados por OpenAPI -->
                                <exclude>**/com/nttdata/cards_service/api/**</exclude>
                                <exclude>**/com/nttdata/cards_service/model/**</exclude>

                                <exclude>**/com/nttdata/cards_service/integration/**</exclude>

